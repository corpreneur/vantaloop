{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "types": ["node", "vite/client"]
  },
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "drizzle", "drizzle/**/*"],
  "include": ["src/**/*", "shared/**/*"]
}
